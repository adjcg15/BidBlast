<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TvParagraphStyle">
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>

    <style name="TvSubtitleStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TvTitleStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TvSmallStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>

    <style name="TvBlackTagDecoratorStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginRight">8dp</item>
    </style>
    
    <style name="TvHeaderTitleStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TvErrorField">
        <item name="android:textColor">@color/red_error</item>
        <item name="android:textSize">12sp</item>
    </style>
</resources>