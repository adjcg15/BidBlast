<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="12dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/gray_rounded_border"
            android:layout_marginBottom="12dp"
            android:padding="12dp">

            <LinearLayout
                android:id="@+id/customerInformationLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingEnd="10dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:cardCornerRadius="50dp">
                    <ImageView
                        android:id="@+id/customerAvatarImageView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/avatar_icon"
                        android:importantForAccessibility="no" />
                </androidx.cardview.widget.CardView>
                <TextView
                    android:id="@+id/customerNameTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Jacob Montiel Salas"
                    android:layout_marginStart="8dp"
                    style="@style/TvSmallStyle"
                    android:textColor="@color/dark_gray"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="1dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:paddingEnd="8dp"
                    android:paddingStart="16dp"
                    android:paddingVertical="12dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/customerOfferDateTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Disponible hasta el 24 de abril de 2024 a las 14:00."
                        style="@style/TvSmallStyle"
                        android:textColor="@color/dark_gray"/>
                    <TextView
                        android:id="@+id/customerOfferAmountTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$378.50MXN"
                        style="@style/TvTitleStyle"
                        android:textColor="@color/dark_primary"/>
                </LinearLayout>
            </LinearLayout>
            <Button
                android:id="@+id/blockCustomerButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/secondary_button_background"
                android:textColor="@color/dark_primary"
                android:text="@string/consultoffers_block_customer"
                android:layout_marginBottom="10dp"/>
        </LinearLayout>
    </LinearLayout>
</layout>