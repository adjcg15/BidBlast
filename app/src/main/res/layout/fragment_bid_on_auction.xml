<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".usecases.bidonauction.BidOnAuctionFragment">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!-- Menu bar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/dark_primary"
                android:padding="12dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/goBackImageView"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/go_back_icon"
                    android:importantForAccessibility="no" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bidonauction_title"
                    style="@style/TvTitleStyle"
                    android:textColor="@color/white"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

            <!-- Main view -->
            <ScrollView
                android:id="@+id/mainViewScrollView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/playerConstraintlayout"
                        android:layout_width="match_parent"
                        android:layout_height="350dp"
                        android:layout_margin="12dp"
                        android:background="@drawable/carousel_item_background"
                        android:clipChildren="true"
                        android:padding="1dp">

                        <ProgressBar
                            android:id="@+id/progressBarVideo"
                            android:visibility="gone"
                            style="?android:attr/progressBarStyleLarge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                        <ImageView
                            android:id="@+id/showedFileImageView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:adjustViewBounds="true"
                            android:importantForAccessibility="no"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_launcher_background"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHeight_max="350dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:visibility="gone"/>

                        <com.google.android.exoplayer2.ui.PlayerView
                            android:id="@+id/playerView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:resize_mode="fill"
                            android:visibility="gone"/>

                        <SurfaceView
                            android:id="@+id/playerSurfaceView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:visibility="gone"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <HorizontalScrollView
                        android:id="@+id/hypermediaFilesHorizontalScrollView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/carouselFilesList"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            android:orientation="horizontal"
                            android:paddingHorizontal="12dp"
                            tools:itemCount="7"
                            tools:listitem="@layout/template_carousel_item"/>
                    </HorizontalScrollView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="12dp"
                        android:paddingTop="12dp"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/articleStateTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="USADO"
                            style="@style/TvParagraphStyle"
                            android:textStyle="bold"
                            android:textColor="@color/dark_primary"/>
                        <TextView
                            android:id="@+id/auctionTitleTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Apple iPhone 15 (256 GB) - Azul"
                            style="@style/TvTitleStyle"/>

                        <TextView
                            android:id="@+id/auctionPriceLabelTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/bidonauction_last_offer"
                            style="@style/TvSubtitleStyle"
                            android:textColor="@color/dark_gray"
                            android:layout_marginTop="16dp"/>
                        <TextView
                            android:id="@+id/auctionPriceTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$15,700.00MXN"
                            style="@style/TvTitleStyle"
                            android:textColor="@color/primary"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/bidonauction_closes_at"/>
                            <TextView
                                android:id="@+id/auctionClosingDateTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/TvParagraphStyle"
                                android:textStyle="bold"/>
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Acerca del artículo"
                            style="@style/TvSubtitleStyle"
                            android:textColor="@color/dark_gray"
                            android:layout_marginTop="16dp"/>
                        <TextView
                            android:id="@+id/auctionDescriptionTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Genial para todas tus fotos y música. Ha estado conmigo un año, así que tiene algunos rasguños leves, pero funciona perfectamente. Me encantaría quedármelo, pero necesito el dinero para algo más. Si estás interesado en tener un iPhone chulo sin tener que pagar el precio completo de uno nuevo, ¡aquí tienes tu oportunidad!"
                            style="@style/TvParagraphStyle"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp">
                            <TextView
                                android:id="@+id/auctionMinimumBidMessageTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/bidonauction_minimum_bid"
                                style="@style/TvParagraphStyle"
                                android:paddingRight="5dp"/>
                            <TextView
                                android:id="@+id/auctionMinimumBidTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$15,600.00MXN"
                                style="@style/TvParagraphStyle"
                                android:textStyle="bold"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp">
                            <LinearLayout
                                android:id="@+id/defaultBidOptionsLinearLayout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:id="@+id/firstDefaultOfferTextView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="$100"
                                    style="@style/TvBlackTagDecoratorStyle"
                                    android:paddingHorizontal="16dp"
                                    android:paddingVertical="12dp"
                                    android:textSize="16sp"
                                    android:background="@drawable/black_rounded_border" />
                                <TextView
                                    android:id="@+id/secondDefaultOfferTextView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="$200"
                                    style="@style/TvBlackTagDecoratorStyle"
                                    android:paddingHorizontal="16dp"
                                    android:paddingVertical="12dp"
                                    android:textSize="16sp"
                                    android:background="@drawable/black_rounded_border" />
                                <TextView
                                    android:id="@+id/thirdDefaultOfferTextView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="$300"
                                    style="@style/TvBlackTagDecoratorStyle"
                                    android:paddingHorizontal="16dp"
                                    android:paddingVertical="12dp"
                                    android:textSize="16sp"
                                    android:background="@drawable/black_rounded_border" />
                            </LinearLayout>
                            <ImageButton
                                android:id="@+id/customBidButton"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:src="@drawable/plus_white_icon"
                                android:background="@drawable/orange_icon_button_background"
                                android:contentDescription="@string/bidonauction_bid_hint" />
                            <EditText
                                android:id="@+id/customBidEditText"
                                android:maxWidth="200dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/bidonauction_bid_hint"
                                style="@style/EdTxtGenericStyle"
                                android:visibility="gone"
                                android:importantForAutofill="no"
                                android:inputType="numberDecimal" />
                        </LinearLayout>
                        <TextView
                            android:id="@+id/customBidErrorTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/bidonauction_custom_bid_error"
                            style="@style/TvSmallStyle"
                            android:layout_marginTop="4dp"
                            android:textColor="@color/red_error"
                            android:visibility="gone"/>

                        <Button
                            android:id="@+id/makeOfferButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            style="@style/BtnPrimaryStyle"
                            android:text="@string/bidonauction_make_offer"/>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>

            <!-- Error view -->
            <LinearLayout
                android:id="@+id/errorLoadingAuctionLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="12dp"
                android:orientation="vertical"
                android:paddingTop="200dp"
                android:visibility="gone">
                <ImageView
                    android:layout_width="220dp"
                    android:layout_height="137dp"
                    android:src="@drawable/error_loading_generic"
                    android:layout_gravity="center"
                    android:importantForAccessibility="no"/>
                <TextView
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:text="@string/getAuction_error_loading_title"
                    style="@style/TvSubtitleStyle"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:layout_marginTop="8dp"/>
                <TextView
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:text="@string/getAuction_error_loading_text"
                    style="@style/TvParagraphStyle"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:textAlignment="center"/>
            </LinearLayout>

            <!-- Loader -->
            <LinearLayout
                android:id="@+id/progressBarLinerLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="?android:attr/progressBarStyleLarge" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</layout>