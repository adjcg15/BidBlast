<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".usecases.consultaauctioncategories.ConsultAuctionCategoriesFragment"
            android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/dark_primary"
                android:padding="12dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/signOutImageView"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/sign_out_icon"
                    android:importantForAccessibility="no" />

                <EditText
                    android:id="@+id/searchCategoryBarEditText"
                    android:layout_height="wrap_content"
                    android:hint="@string/consultcategories_searchbar_hint"
                    android:layout_marginHorizontal="12dp"
                    style="@style/EdTxtSearchbarStyle"
                    android:inputType="text"
                    android:importantForAutofill="no"
                    android:layout_weight="1"
                    android:layout_width="0dp" />

                <ImageButton
                    android:id="@+id/searchCategoryButton"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/search_icon"
                    android:background="@drawable/orange_icon_button_background"
                    android:contentDescription="@string/searchauction_search_button_action" />
            </LinearLayout>

            <Button
                android:id="@+id/createNewCategoryButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                style="@style/BtnTernaryStyle"
                android:text="@string/consultcategories_create_category"
                android:textColor="@color/secondary" />

            <androidx.recyclerview.widget.RecyclerView
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:id="@+id/eq_recycler"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                tools:itemCount="6"
                tools:listitem="@layout/template_category_details"
                android:layout_margin="12dp" />

            <TextView
                android:id="@+id/loadingCategoriesTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/consultcategories_loading_message"
                android:layout_marginHorizontal="12dp"
                android:textAlignment="center"
                style="@style/TvSmallStyle"
                android:textColor="@color/dark_primary"
                android:visibility="gone"
                android:paddingVertical="4dp" />

            <LinearLayout
                android:id="@+id/emptyCategoriesMessageLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="12dp"
                android:paddingTop="80dp"
                android:orientation="vertical"
                android:visibility="gone">
                <ImageView
                    android:layout_width="195dp"
                    android:layout_height="214dp"
                    android:src="@drawable/empty_items_generic"
                    android:layout_gravity="center"
                    android:importantForAccessibility="no"/>
                <TextView
                    android:id="@+id/emptyCategoriesTitleTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/consultcategories_empty_title"
                    style="@style/TvSubtitleStyle"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"/>
                <TextView
                    android:id="@+id/emptyCategoriesTextTextView"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:text="@string/consultcategories_empty_text"
                    style="@style/TvParagraphStyle"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:textAlignment="center"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/emptySearchMessageLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="12dp"
                android:paddingTop="80dp"
                android:orientation="vertical"
                android:visibility="gone">
                <ImageView
                    android:layout_width="195dp"
                    android:layout_height="214dp"
                    android:src="@drawable/empty_items_generic"
                    android:layout_gravity="center"
                    android:importantForAccessibility="no"/>
                <TextView
                    android:id="@+id/emptySearchTitleTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/consultcategories_empty_search_title"
                    style="@style/TvSubtitleStyle"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"/>
                <TextView
                    android:id="@+id/emptySearchTextTextView"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:text="@string/consultcategories_empty_search_text"
                    style="@style/TvParagraphStyle"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:textAlignment="center"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/errorLoadingCategoriesLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="12dp"
                android:orientation="vertical"
                android:paddingTop="200dp"
                android:visibility="gone">
                <ImageView
                    android:layout_width="220dp"
                    android:layout_height="137dp"
                    android:src="@drawable/error_loading_generic"
                    android:layout_gravity="center"
                    android:importantForAccessibility="no"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/consultcategories_error_loading_title"
                    style="@style/TvSubtitleStyle"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"/>
                <TextView
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:text="@string/consultcategories_error_loading_text"
                    style="@style/TvParagraphStyle"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:textAlignment="center"/>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</layout>