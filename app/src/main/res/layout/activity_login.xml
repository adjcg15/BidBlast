<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
    </data>

    <FrameLayout
        android:id="@+id/fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/loginView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="12dp"
                android:paddingTop="30dp"
                android:orientation="vertical"
                tools:context=".usecases.login.LoginActivity">

                <ImageView
                    android:layout_width="97dp"
                    android:layout_height="29dp"
                    android:src="@drawable/app_text_logo"
                    android:layout_gravity="center"
                    android:layout_marginBottom="32dp"
                    android:importantForAccessibility="no"/>

                <ImageView
                    android:layout_width="300dp"
                    android:layout_height="232dp"
                    android:src="@drawable/login_welcome"
                    android:layout_gravity="center"
                    android:layout_marginBottom="32dp"
                    android:importantForAccessibility="no"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/login_welcome_back"
                    style="@style/TvTitleStyle"
                    android:textAlignment="center"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/login_welcome_description"
                    android:textAlignment="center"
                    android:layout_marginBottom="40dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/global_email"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>
                <EditText
                    android:id="@+id/emailEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/login_email_example"
                    android:importantForAutofill="no"
                    android:inputType="textEmailAddress"
                    style="@style/EdTxtGenericStyle"/>
                <TextView
                    android:id="@+id/emailErrorTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/login_email_error"
                    style="@style/TvSmallStyle"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/red_error"
                    android:visibility="gone"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/global_password"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="16dp"/>
                <EditText
                    android:id="@+id/passwordEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="************"
                    tools:ignore="HardcodedText"
                    android:importantForAutofill="no"
                    android:inputType="textPassword"
                    style="@style/EdTxtGenericStyle"/>
                <TextView
                    android:id="@+id/passwordErrorTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/login_password_error"
                    style="@style/TvSmallStyle"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/red_error"
                    android:visibility="gone"/>

                <Button
                    android:id="@+id/loginButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/BtnPrimaryStyle"
                    android:layout_marginTop="24dp"
                    android:text="@string/login_main_action"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="24dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/login_account_question"/>
                    <TextView
                        android:id="@+id/loginRegisterTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="@color/secondary"
                        android:text="@string/login_register_action"
                        android:layout_marginStart="4dp"
                        android:onClick="openSignUpFragment"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </FrameLayout>
</layout>
