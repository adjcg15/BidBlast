<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        tools:context=".login.LoginActivity">

        <ImageView
            android:layout_width="97dp"
            android:layout_height="29dp"
            android:src="@drawable/app_text_logo"
            android:layout_gravity="center"
            android:layout_marginBottom="32dp"
            android:importantForAccessibility="no"/>
        
        <ImageView
            android:layout_width="300dp"
            android:layout_height="232dp"
            android:src="@drawable/login_welcome"
            android:layout_gravity="center"
            android:layout_marginBottom="32dp"
            android:importantForAccessibility="no"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/login_welcome_back"
            style="@style/TvTitleStyle"
            android:textAlignment="center"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/login_welcome_description"
            android:textAlignment="center"
            android:layout_marginBottom="40dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/global_email"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/login_email_example"
            android:layout_marginBottom="16dp"
            android:importantForAutofill="no"
            android:inputType="textEmailAddress"
            style="@style/EdTxtGenericStyle"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/global_password"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="************"
            android:layout_marginBottom="24dp"
            tools:ignore="HardcodedText"
            android:importantForAutofill="no"
            android:inputType="textPassword"
            style="@style/EdTxtGenericStyle"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/BtnPrimaryStyle"
            android:text="@string/login_main_action"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="8dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/login_account_question"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/secondary"
                android:text="@string/login_register_action"
                android:layout_marginStart="4dp"/>
        </LinearLayout>
    </LinearLayout>
</layout>