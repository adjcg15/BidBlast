<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".usecases.consultcompletedauctions.ConsultCompletedAuctionsFragment">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/dark_primary"
                android:padding="12dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <ImageButton
                    android:id="@+id/goToLoginImageButton"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@color/transparent"
                    android:src="@drawable/go_back_icon" />
                <EditText
                    android:id="@+id/searchBarEditText"
                    android:layout_height="wrap_content"
                    android:hint="@string/consultcompletedauctions_searchbar_hint"
                    android:layout_marginHorizontal="12dp"
                    style="@style/EdTxtSearchbarStyle"
                    android:inputType="text"
                    android:importantForAutofill="no"
                    android:layout_weight="1"
                    android:layout_width="0dp" />
                <ImageButton
                    android:id="@+id/searchAuctionsImageButton"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/search_icon"
                    android:background="@drawable/orange_icon_button_background"
                    android:contentDescription="@string/searchauction_search_button_action">
                </ImageButton>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:id="@+id/completedAuctionsListRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                tools:itemCount="1"
                tools:listitem="@layout/template_auction_details_with_state"
                android:layout_margin="12dp"/>
            <TextView
                android:id="@+id/allAuctionsLoadedTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/searchauction_all_auctions_loaded"
                android:layout_marginHorizontal="12dp"
                android:textAlignment="center"
                style="@style/TvSmallStyle"
                android:visibility="gone"
                android:paddingVertical="4dp"/>
            <TextView
                android:id="@+id/loadingAuctionsTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/consultcompletedauctions_loading_completed_auctions"
                android:layout_marginHorizontal="12dp"
                android:textAlignment="center"
                style="@style/TvSmallStyle"
                android:textColor="@color/dark_primary"
                android:visibility="gone"
                android:paddingVertical="4dp"/>
            <LinearLayout
                android:id="@+id/emptyCompletedAuctionsMessageLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="12dp"
                android:paddingTop="80dp"
                android:orientation="vertical"
                android:visibility="gone">
                <ImageView
                    android:layout_width="195dp"
                    android:layout_height="214dp"
                    android:src="@drawable/empty_items_generic"
                    android:layout_gravity="center"
                    android:importantForAccessibility="no"/>
                <TextView
                    android:id="@+id/emptyCompletedAuctionsTitleTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/consultcompletedauctions_empty_completed_auctions_title"
                    style="@style/TvSubtitleStyle"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"/>
                <TextView
                    android:id="@+id/emptyCompletedAuctionsTextTextView"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:text="@string/consultcompletedauctions_empty_completed_auctions_text"
                    style="@style/TvParagraphStyle"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:textAlignment="center"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/errorLoadingCompletedAuctionsLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="12dp"
                android:orientation="vertical"
                android:paddingTop="200dp"
                android:visibility="gone">
                <ImageView
                    android:layout_width="220dp"
                    android:layout_height="137dp"
                    android:src="@drawable/error_loading_generic"
                    android:layout_gravity="center"
                    android:importantForAccessibility="no"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/consultcompletedauctions_error_loading_title"
                    style="@style/TvSubtitleStyle"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"/>
                <TextView
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:text="@string/consultcompletedauctions_error_loading_text"
                    style="@style/TvParagraphStyle"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:textAlignment="center"/>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</layout>